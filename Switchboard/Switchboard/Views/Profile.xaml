<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Switchboard.Pages.ProfilePage" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <ContentView Grid.Row="0" Grid.ColumnSpan="2">
            <Label Text="Your profile information is shown below. Please ensure it is correct." TextColor="Black" XAlign="Center" FontSize="Large" />
        </ContentView>

        <ContentView Grid.Row="1" Grid.Column="0" VerticalOptions="Center">
            <Label Text="First Name:" TextColor="Black" XAlign="Center" FontSize="Large"/>
        </ContentView>

        <ContentView Grid.Row="1" Grid.Column="1"  VerticalOptions="Center">
            <Entry Placeholder="First Name" TextColor="Black" FontSize="Large"/>
        </ContentView>

    </Grid>
</ContentPage>