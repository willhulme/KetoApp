<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Switchboard.MainSwitchboard" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:Controls="clr-namespace:Switchboard;assembly=Switchboard">

    <ScrollView Orientation="Vertical">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <ContentView Grid.Row="0" Grid.ColumnSpan="2">
                <Label Text="This guidance does not replace advice from your diabetes team." TextColor="Black" XAlign="Center" FontSize="Large" />
            </ContentView>

            <Controls:SwitchboardButton Grid.Row="1" Grid.Column="0" Icon="Unwell.png" Label="I Feel Unwell">
                <Controls:SwitchboardButton.GestureRecognizers>
                    <TapGestureRecognizer Tapped="UnwellTapped" />
                </Controls:SwitchboardButton.GestureRecognizers>
            </Controls:SwitchboardButton>

            <Controls:SwitchboardButton Grid.Row="1" Grid.Column="1" Icon="Blood.png" Label="My Blood Glucose">
                <Controls:SwitchboardButton.GestureRecognizers>
                    <TapGestureRecognizer Tapped="BloodTapped" />
                </Controls:SwitchboardButton.GestureRecognizers>
            </Controls:SwitchboardButton>

            <Controls:SwitchboardButton Grid.Row="2" Grid.Column="0" Icon="About.png" Label="About Me">
                <Controls:SwitchboardButton.GestureRecognizers>
                    <TapGestureRecognizer Tapped="AboutTapped" />
                </Controls:SwitchboardButton.GestureRecognizers>
            </Controls:SwitchboardButton>

            <Controls:SwitchboardButton Grid.Row="2" Grid.Column="1" Icon="Help.png" Label="Help">
                <Controls:SwitchboardButton.GestureRecognizers>
                    <TapGestureRecognizer Tapped="HelpTapped" />
                </Controls:SwitchboardButton.GestureRecognizers>
            </Controls:SwitchboardButton>

            <ContentView Grid.Row="3" Grid.ColumnSpan="2" Padding="30">
                <Image Source="diabetesuk.png" />
            </ContentView>

            <ContentView Grid.Row="4" Grid.ColumnSpan="2" Padding="30">
                <Image Source="nhs.png" />
            </ContentView>

            <ContentView Grid.Row="5" Grid.ColumnSpan="2" Padding="30">
                <Image Source="uod.png" />
            </ContentView>

            <ContentView Grid.Row="6" Grid.ColumnSpan="2">
                <Label Text="© NHS Highland 2017" TextColor="Black" XAlign="Center"/>
            </ContentView>

        </Grid>
    </ScrollView>

</ContentPage>